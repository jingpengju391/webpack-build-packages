{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "types": [
      "node",
      "webpack"
    ]
  },
  "include": [
    "./shims-vue.d.ts",
    "./packages/**/*.ts",
    "./packages/**/*.tsx",
    "./packages/**/*.vue"
  ],
  "exclude": [ "node_modules", "examples", "**/*.spec.ts", "dist" ],
  "files": [".eslintrc.js"]
}

